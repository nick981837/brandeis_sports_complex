
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <h1 class="mb-4">Contact Us</h1>
        <a href="<%=`/contacts/new` %>"> <Button class="btn btn-primary mt-3 mb-3">Contact Us</Button></a>
  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th>email</th>
        <th>subject</th>
        <th>message</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach(contact => { %>
      <tr>
        <td><a href="<%= `/contact/${contact._id}`%>"><%= contact.name %></a></td>
        <td><%= contact.name%></td>
        <td><%= contact.email %></td>
        <td><%= contact.subject %></td>
        <td><%= contact.message %></td>
        <td>
          <a href="<%=`/contacts/${contact._id}/edit` %>"> Edit </a>
        </td>
        <td>
            <a
            href="<%= `contacts/${contact._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this message?')"
            >Delete</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
      </div>
    </div>
</div>