<h1>Contact Data for <%= contact.name %></h1>
<table>
  <tr>
    <th>Name</th>
    <td><%= contact.name %></td>
  </tr>
  <tr>
    <th>email</th>
    <td><%= contact.email %></td>
  </tr>
  <tr>
    <th>subject</th>
    <td><%= contact.subject %></td>
  </tr>
  <tr>
    <th>message</th>
    <td><%= contact.message %></td>
  </tr>


</table>

<div>
  <a href="/contacts">View all contacts</a>
</div>
<div>
  <a href="<%=`/contacts/${contact._id}/edit`%>">Edit contact</a>
</div>
<div>
  <a href="<%= `/contacts/${contact._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this contact message?')">Delete</a>