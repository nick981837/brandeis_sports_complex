<div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <h1 class="mb-4">Edit</h1>
        <form action="<%=`/facilities/${facility._id}/update?_method=PUT`%>" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= facility.name %>" required>
          </div>
          <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type" value="<%= facility.type %>" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" value="<%= facility.description %>" required>
          </div>
          <button type="submit" class="btn btn-primary" style="background-color: #003478;">Submit</button>
        </form>
      </div>
    </div>
</div>