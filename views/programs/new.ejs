<div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <h1 class="mb-4">New Programs</h1>
        <form action="/programs/create" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" required>
          </div>
          <div class="form-group">
            <label for="schedule">Scheule</label>
            <input type="text" class="form-control" id="schedule" name="schedule" required>
          </div>
          <div class="form-group">
            <label for="instructor">Instructor</label>
            <input type="text" class="form-control" id="instructor" name="instructor" required>
          </div>
          <button type="submit" class="btn btn-primary" style="background-color: #003478;">Submit</button>
        </form>
      </div>
    </div>
</div>