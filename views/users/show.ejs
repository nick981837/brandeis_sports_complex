
<div class="user-show">
  <h1>User Data for <%= user.name %></h1>
  <table>
    <tr>
      <th>Name -</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>Email -</th>
      <td><%= user.email %></td>
    </tr>
  </table>

  <h1>Memberships:</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Type</th>
        <th scope="col">Duration</th>
        <th scope="col">Price</th>
        <th scope="col">Link</th>
      </tr>
    </thead>
    <tbody>
      <% user.memberships.forEach(function(membership) { %>
      <tr>
        <td><%= membership.type %></td>
        <td><%= membership.duration %></td>
        <td><%= membership.price %></td>
        <td><a href="<%=`/memberships/${membership._id}`%>">Link</a></td>
        <% }); %>
      </tr>
    </tbody>
  </table>

  <% if (user.isAdmin) { %>
  <div>
    <a href="/users">View all users</a>
  </div>
  <% } %>
  <div>
    <a href="<%=`/users/${user._id}/edit`%>">Edit User Details</a>
  </div>
  <div>
    <a
      href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this record?')"
      >Delete</a
    >
  </div>
</div>
